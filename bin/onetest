my $rcsid = ''; $rcsid .= '$Id: onetest,v 1.2 2006-03-28 23:27:20 francis Exp $';

use strict;

use FindBin;
use lib "$FindBin::Bin/../perllib/tests";

my $name = shift;
die "Please specify test, e.g. Web, as parameter" if !$name;

eval "use $name";
eval "\\&${name}::test()";

