#!/usr/bin/perl -w
#
# generate-pgpass:
#
# Creates ~/.pgpass files for users who it is convenient to give
# access to databases. Overwrites any existing ~/.pgpass file for
# the specified users.
#

die "run on bitter/tea only at the moment" if `hostname` !~ m/^(bitter|tea)$/;

# Who can access what databases
my $database_permissions = {
    # All-seeing power
    'root' => ['pb', 'ycml', 'rt', 'gaze', 'dadem', 'evel', 'mapit', 'ratty', 'fyr', 'pb-interface'],
     
    # People
    'francis' => ['fyr','pb','ycml','mapit','dadem','ratty','evel'],
    'chris' => ['fyr','pb','ycml','chris','mapit','dadem','ratty','evel'],
    'matthew' => ['fyr','pb','ycml','mapit','dadem','ratty','evel','pb-staging','ycml-staging','fyr-staging'],
    'etienne' => ['pb-staging','ycml-staging'],
    'timsk' => ['pb-staging'],

    # Sites
    'pb' => ['pb','pb-staging','pb-interface'],
    'ycml' => ['ycml','ycml-staging'],
    'fyr' => ['fyr','fyr-staging'],
    'dademcron' => ['fyr', 'fyr-staging'],

    # Services
    'msservices' => ['mapit','dadem','ratty','evel'],
};

my $rcsid = ''; $rcsid .= '$Id: generate-pgpass,v 1.9 2006-02-10 16:18:46 francis Exp $';

use strict;
require 5.8.0;

use FindBin;
use lib "$FindBin::Bin/../perllib";

use mySociety::Util;

foreach my $user (keys %$database_permissions) {
    my ($user_login, $user_pass, $user_uid, $user_gid) = getpwnam($user);
    my $user_home = `echo ~$user`;
    chomp $user_home;

    my ($tmph, $tmpn) = mySociety::Util::named_tempfile();
    $tmph->print("# DO NOT EDIT - edit and rerun generate-pgpass instead\n");
    
    my $databases = $database_permissions->{$user};
    foreach my $database (@$databases) {
        my $password = `$FindBin::Bin/pgpw $database`;
        chomp $password;
        $tmph->print("*:*:$database:$database:$password\n") || throw Oops("$tmpn: write: $!");
    }
    $tmph->close();
    
    chmod 0400, $tmpn;
    chown($user_uid, $user_gid, $tmpn);

    my $dest = "$user_home/.pgpass";
    rename($tmpn, $dest);
}

