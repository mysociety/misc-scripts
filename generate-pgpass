#!/usr/bin/perl -w
#
# generate-pgpass:
# Creates ~/.pgpass files for users to whom it is convenient to give access to
# databases. Overwrites any existing ~/.pgpass file for the specified users.
#
# Copyright (c) 2005 UK Citizens Online Democracy. All rights reserved.
# Email: francis@mysociety.org; WWW: http://www.mysociety.org/
# 

# Who can access what databases
my $database_permissions_bitter_tea = {
    # All-seeing power
    'root' => ['pb', 'ycml', 'rt', 'gaze', 'dadem', 'evel', 'mapit', 'ratty', 'fyr', 'pb-interface', 'pb-staging', 'mswww', 'track', 'list', 'pet'],
     
    # People
    'francis' => ['fyr','pb','ycml','mapit','dadem','ratty','evel','mswww'],
    'chris' => ['fyr','pb','ycml','chris','mapit','dadem','ratty','evel', 'track', 'pb-staging'],
    'matthew' => ['fyr','pb','ycml','mapit','dadem','ratty','evel','pb-staging','ycml-staging','fyr-staging', 'track', 'pet-staging', 'pet'],
    'etienne' => ['pb-staging','ycml-staging'],
    'timsk' => ['pb-staging'],
    'louise' => ['mswww-staging','mswww','news-staging'],
    'adam' => ['fyr','pb','mapit','dadem','ratty','evel','fyr-staging'],

    # Sites
    'pb' => ['pb','pb-staging','pb-interface'],
    'ycml' => ['ycml','ycml-staging'],
    'fyr' => ['fyr','fyr-staging'],
    'pet' => ['pet','pet-staging'],
    'dademcron' => ['fyr', 'fyr-staging', 'rt'],

    # Services
    'msservices' => ['mapit','dadem','ratty','evel'],
};

my $database_permissions_balti = {
    # All-seeing power
    'root' => [],
     
    # People
    'matthew' => ['bci-matthew'],

    # Sites
    'pb-testharness' => ['pb-testharness'],
    'msservices-testharness' => ['mapit-testharness','dadem-testharness','ratty-testharness','evel-testharness'],

    # Services
};

my $database_permissions;
my $server = (uname())[1];
if ($server eq 'bitter' || $server eq 'tea') {
	$database_permissions = $database_permissions_bitter_tea;
} elsif ($server eq 'balti') {
	$database_permissions = $database_permissions_balti;
} else {
	die "generate-pgpass not configured for server $server";
}

my $rcsid = ''; $rcsid .= '$Id: generate-pgpass,v 1.28 2006-10-03 13:51:36 matthew Exp $';

use strict;
require 5.8.0;

use FindBin;
use lib "$FindBin::Bin/../perllib";
use POSIX;

use mySociety::Util;

foreach my $user (keys %$database_permissions) {
    my @x = getpwnam($user) or die "$user: getpwnam: $!";
    my ($user_login, $user_pass, $user_uid, $user_gid) = @x;
    my $user_home = $x[7];

    my ($tmpn, $tmph) = mySociety::Util::create_file_to_replace("$user_home/.pgpass") or die "open: $!";
    $tmph->print("# DO NOT EDIT - edit and rerun generate-pgpass instead\n");

    my $databases = $database_permissions->{$user};
    foreach my $database (@$databases) {
        my $password = `$FindBin::Bin/pgpw $database`;
        chomp $password;
        $tmph->print("*:*:$database:$database:$password\n") || throw Oops("$tmpn: write: $!");
    }
    $tmph->close();

    chmod 0400, $tmpn;
    chown($user_uid, $user_gid, $tmpn);

    my $dest = "$user_home/.pgpass";
    rename($tmpn, $dest);
}

