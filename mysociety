#!/bin/bash
# Shorter interface to deploy scripts on servers.
set -e

function show_help {
	cat <<END
Usage: mysociety COMMAND

COMMAND is any of:
  config - deploy new config for current server
END
	exit
}

if [ "$1" = "config" ]
then
	[ "$1" != "" ] && show_help
	HOST=`hostname`
	/data/mysociety/bin/deploy-configuration /data/servers/$HOST /data/servers/$HOST.pl
else
	show_help
fi

