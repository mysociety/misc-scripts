#!/bin/bash
#
# bin/gettext-makemo
# Convert all .po files of translations into .mo files
#
# Copyright (c) 2005 UK Citizens Online Democracy. All rights reserved.
# Email: francis@mysociety.org; WWW: http://www.mysociety.org/
#
# $Id: gettext-makemo,v 1.5 2005-12-14 18:14:45 matthew Exp $

if [ ! -d locale ]
then
    echo "Run in root mysociety directory with locale directory just below"!
    exit
fi

for X in locale/*.UTF-8
do
    if [ -d $X ]
    then
        cd $X/LC_MESSAGES
        echo -n "$X: "
        msgfmt -c -v -o PledgeBank.mo PledgeBank.po
        cd ../../../
    fi
done

